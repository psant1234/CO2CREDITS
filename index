<!DOCTYPE html>
<html>
<head>
  <title>Carbon Credit Trading</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
    body { font-family: Arial, sans-serif; background: #f5f5f5; padding: 20px; }
    .container { max-width: 700px; background: white; padding: 30px; margin: auto; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); }
    h2 { color: #8A1538; text-align: center; }
    label { display: block; margin-top: 15px; }
    input, select { width: 100%; padding: 8px; margin-top: 5px; }
    button { margin-top: 20px; padding: 10px 20px; background-color: #8A1538; color: white; border: none; border-radius: 4px; cursor: pointer; }
  </style>
</head>
<body>
  <div class="container">
    <h2>Submit Your Trade</h2>
    <form id="tradeForm">
      <label for="team">Team Name:</label>
      <input type="text" id="team" required>

      <label for="creditsToBuy">Credits to Buy:</label>
      <input type="number" id="creditsToBuy" min="0">

      <label for="bidPrice">Bid Price ($/credit):</label>
      <input type="number" id="bidPrice" min="0" step="0.01">

      <label for="creditsToSell">Credits to Sell:</label>
      <input type="number" id="creditsToSell" min="0">

      <label for="askPrice">Ask Price ($/credit):</label>
      <input type="number" id="askPrice" min="0" step="0.01">

      <label><input type="checkbox" id="negotiate"> Open to negotiate</label>

      <button type="submit">Submit</button>
    </form>
    <p id="response"></p>
  </div>

  <script>
    document.getElementById("tradeForm").addEventListener("submit", function(e) {
      e.preventDefault();
      const data = {
        team: document.getElementById("team").value,
        creditsToBuy: parseInt(document.getElementById("creditsToBuy").value || 0),
        bidPrice: parseFloat(document.getElementById("bidPrice").value || 0),
        creditsToSell: parseInt(document.getElementById("creditsToSell").value || 0),
        askPrice: parseFloat(document.getElementById("askPrice").value || 0),
        negotiate: document.getElementById("negotiate").checked
      };

      fetch('YOUR_DEPLOYED_SCRIPT_URL', {
        method: 'POST',
        body: JSON.stringify(data)
      })
      .then(res => res.text())
      .then(txt => document.getElementById("response").innerText = txt)
      .catch(err => console.error('Error:', err));
    });
  </script>
</body>
</html>
